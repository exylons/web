---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import { getCollection } from "astro:content";
import { socials } from "@data/constants";
import Blog from "@components/Blog.astro";
import Social from "@components/Social.astro";
import Toast from "@components/Toast.astro";
import { Picture } from "astro:assets";
import me from "../assets/me.jpg";
import { Icon } from "astro-icon/components";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout>
  <section class="flex flex-col sm:flex-row-reverse">
    <div>
      <Picture
        src={me}
        alt="Lance Ross"
        loading="eager"
        class="aspect-square rounded-full mb-6 sm:mb-0"
        densities={[1.5, 2]}
        formats={["avif", "webp"]}
        width={160}
        height={160}
      />
    </div>
    <div class="sm:mr-5">
      <Header title="Hey! I'm Lance Ross" />
      <p class="mt-3 max-w-prose leading-relaxed">
        I'm also known as "exylons" or "exylods" online. I am an aspiring web
        developer in the Philippines currently learning on STEM Strand (ICT) in
        my Senior High School year.
      </p>
    </div>
  </section>
  <section>
    <h2 class="mt-12 text-2xl font-semibold dark:text-zinc-100 text-zinc-900">
      Recent Posts
    </h2>
    <p class="mt-3 max-w-prose leading-relaxed">
      This is where I share my ideas and thoughts in web development field. You
      can have a read if you want.
    </p>
    <ul class="mt-6 grid grid-cols-1 gap-8">
      {posts.slice(0, 5).map((post) => <Blog minimal {...post} />)}
    </ul>
    <a
      class="inline-block mt-7 dark:hover:text-green hover:text-green-500 transition-colors"
      href="/blog/">View all posts &rarr;</a
    >
  </section>
  <section>
    <h2 class="mt-12 text-2xl font-semibold dark:text-zinc-100 text-zinc-950">
      Connect with me
    </h2>
    <p class="mt-3 max-w-prose leading-relaxed">
      My only way of communication is via email or Signal. If you wanna hit me a message or follow my works, feel free to do so!
    </p>
    <ul class="mt-4 sm:mt-6 grid sm:grid-cols-3 gap-2 sm:gap-1">
      <li id="copy-email" title="Copy the email">
        <span
          id="copyText"
          class="inline-flex gap-2 items-center group cursor-pointer hover:text-green-600 dark:hover:text-green-400 transition-colors"
          ><Icon name="email" size={16} />hi@exylons.com<Icon
            name="clipboard"
            class="-ml-1 opacity-0 group-hover:opacity-100 transition-opacity"
          /></span
        >
      </li>
      <li id="copy-signal" title="Copy Signal username">
        <span
          id="copyText"
          class="inline-flex gap-2 items-center group cursor-pointer hover:text-green-600 dark:hover:text-green-400 transition-colors"
          ><Icon name="signal" size={16} />exylons.23<Icon
            name="clipboard"
            class="-ml-1 opacity-0 group-hover:opacity-100 transition-opacity"
          /></span
        >
      </li>
      {socials.map((s) => <Social {...s} />)}
    </ul>
    <Toast icon="email" description="Email copied to clipboard." idList="toast-email" />
    <Toast
      icon="signal"
      description="Username copied to clipboard."
      idList="toast-signal"
    />
  </section>
</Layout>

<script is:inline async>
  document.getElementById("copy-email").addEventListener("click", () => {
    let copyText = "hi@exylons.com",
      toastElement = document.getElementById("toast-email");
    navigator.clipboard.writeText(copyText).then(() => {
      toastElement.classList.add("!opacity-100"),
        setTimeout(() => {
          toastElement.classList.remove("!opacity-100");
        }, 2500);
    });
  }),
    document.getElementById("copy-signal").addEventListener("click", () => {
      let copyText = "exylons.23",
        toastElement = document.getElementById("toast-signal");
      navigator.clipboard.writeText(copyText).then(() => {
        toastElement.classList.add("!opacity-100"),
          setTimeout(() => {
            toastElement.classList.remove("!opacity-100");
          }, 2500);
      });
    });
</script>
